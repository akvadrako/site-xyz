{
    "extends": "./.svelte-kit/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
	"checkJs": false,
        "paths": {
            "$lib": ["src/lib"],
            "$comp": ["src/comp"],
            "$comp/*": ["src/comp/*"],
            "$lib/*": ["src/lib/*"]
        }
    },
    "include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.svelte"]
}
